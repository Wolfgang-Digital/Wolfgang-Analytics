{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src_old"
  ],
  "compileOnSave": true
}